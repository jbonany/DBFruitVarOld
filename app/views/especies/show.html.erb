<%- model_class = @especy.class -%>
<h2><%=t '.title', :default => model_class.model_name.human %></h2>

<dl class="dl-horizontal">

  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @especy.name %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:latin_name) %>:</strong></dt>
  <dd><%= @especy.latin_name %></dd>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              especies_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_especy_path(@especy), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              especy_path(@especy),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>