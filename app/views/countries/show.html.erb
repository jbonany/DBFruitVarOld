<%- model_class = @country.class -%>


<dl class="dl-horizontal">

  <dt><strong><%= model_class.human_attribute_name(:iso) %>:</strong></dt>
  <dd><%= @country.iso %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @country.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:printable_name) %>:</strong></dt>
  <dd><%= @country.printable_name %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:iso3) %>:</strong></dt>
  <dd><%= @country.iso3 %></dd>

  <dt><strong><%= model_class.human_attribute_name(:numcode) %>:</strong></dt>
  <dd><%= @country.numcode %></dd>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              countries_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_country_path(@country), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              country_path(@country),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>