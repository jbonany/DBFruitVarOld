<%= form_for @country, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label :iso, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :iso, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :printable_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :printable_name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :iso3, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :iso3, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :numcode, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :numcode, :class => 'text_field' %>
      </div>
    </div>
    
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', countries_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>