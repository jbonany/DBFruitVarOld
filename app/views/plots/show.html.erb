<%- model_class = @plot.class -%>
<h2><%=t '.title', :default => model_class.model_name.human %></h2>

<dl class="dl-horizontal">

  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @plot.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:acronym) %>:</strong></dt>
  <dd><%= @plot.acronym %></dd>

  <dt><strong><%= model_class.human_attribute_name(:location_id) %>:</strong></dt>
  <dd><%= @plot.location.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:especy_id) %>:</strong></dt>
  <dd><%= @plot.especy.name %></dd>
  
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              plots_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_plot_path(@plot), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              plot_path(@plot),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>